{
  "name": "shadershow",
  "version": "1.0.0",
  "description": "A VS Code-like GLSL shader editor with Shadertoy compatibility",
  "main": "dist/main/app.js",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:watch": "node esbuild.config.mjs --watch",
    "typecheck": "tsc -b",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --enable-logging"
  },
  "keywords": [
    "glsl",
    "shader",
    "shadertoy",
    "webgl",
    "editor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "electron": "^33.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@babel/standalone": "^7.28.6",
    "ace-builds": "^1.32.0",
    "express": "^5.2.1",
    "ffmpeg-static": "^5.3.0",
    "three": "^0.182.0",
    "ws": "^8.19.0"
  },
  "optionalDependencies": {
    "grandiose": "^0.0.4",
    "grandiose-mac": "^0.0.6",
    "node-syphon": "^1.5.0"
  }
}
